<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://openbox.org/">

    <menu id="power-menu" label="Power Options">
      <item label="Log Out">
        <action name="Exit">
          <prompt>yes</prompt>
        </action>
      </item>
      <item label="Shut down">
        <action name="Execute">
          <prompt>yes</prompt>
          <command>shutdown -h now</command>
        </action>
      </item>
      <item label="Reboot">
        <action name="Execute">
          <prompt>yes</prompt>
          <command>reboot</command>
        </action>
      </item>
    </menu>

</openbox_menu>
